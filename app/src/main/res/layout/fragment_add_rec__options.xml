<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.addrec.addRec_Options"
    android:background="#364360"
    >

    <Button
        android:id="@+id/add_url"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginBottom="24dp"
        android:onClick="myOnClick"
        android:text="مشاركة رابط (URL)"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="@null"
        android:background="#EEEAD3"
        app:layout_constraintBottom_toTopOf="@+id/add_clip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />

    <Button
        android:id="@+id/add_clip"
        android:layout_width="150dp"
        android:layout_height="85dp"
        android:layout_marginBottom="320dp"
        android:onClick="onClick"
        android:text="رفع مقطع صوتي"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        android:background="#EEEAD3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>